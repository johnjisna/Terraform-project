{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:ListImages"
      ],
      "Resource": "arn:aws:ecr:${region}:${account_id}:repository/${repository_name}"
    }
  ]
}
